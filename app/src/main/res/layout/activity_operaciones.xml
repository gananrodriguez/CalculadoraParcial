<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_operaciones"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jhonatan.calculadora.operaciones">

    <TextView

        android:id="@+id/view3"
        android:text="Numero 1"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"



        />

    <TextView
        android:id="@+id/view4"
        android:text="Numero 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_below="@+id/valor1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <EditText
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:textColor="#000000"
        android:textSize="15sp"
        android:id="@+id/valor1"

        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/valor2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:text=""
        android:id="@+id/valor2"
        android:layout_alignTop="@+id/view4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp" />

    <RadioGroup
        android:id="@+id/grupoR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="33dp"
        android:layout_below="@+id/view4"
        android:layout_alignEnd="@+id/button">

        <RadioButton
            android:text="Suma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton1"
            android:layout_weight="1" />

        <RadioButton
            android:text="Resta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton2"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Multiplicacion" />

        <RadioButton
            android:text="Division"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton4"
            android:layout_weight="1" />
    </RadioGroup>

    <TextView

        android:id="@+id/view5"
        android:text="Resultado"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/grupoR"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view5"
        android:layout_alignStart="@+id/view5"
        android:layout_marginTop="32dp"
        android:id="@+id/resultado" />

    <Button
        android:text="siguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"

        android:layout_below="@+id/resultado"
        android:layout_alignStart="@+id/resultado"
        android:layout_marginTop="45dp" />


</RelativeLayout>
